    "@readium/shared": "1.3.0",
    "@reduxjs/toolkit": "^2.8.2",
    "motion": "^12.23.12",
    "next": "15.4.5",
    "react": "^19.1.1",
    "react-aria": "^3.42.0",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.1",
    "react-modal-sheet": "^4.4.0",
    "react-redux": "^9.2.0",
    "react-resizable-panels": "^3.0.4",
    "react-stately": "^3.40.0"
